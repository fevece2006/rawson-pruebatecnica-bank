# Configuración de Base de Datos PostgreSQL
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/bankdb
SPRING_DATASOURCE_USERNAME=bank
SPRING_DATASOURCE_PASSWORD=bank

# Configuración de Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_OUTBOX_TOPIC=dbserver1.bankdb.public.outbox
KAFKA_ACCOUNT_EVENTS_TOPIC=account.events
KAFKA_TRANSFER_EVENTS_TOPIC=transfer.events
KAFKA_DLQ_TOPIC=account.events.dlq

# Configuración de Eureka
EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://service-registry:8761/eureka/

# Configuración de Spring Profiles
SPRING_PROFILES_ACTIVE=default

